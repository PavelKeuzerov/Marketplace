
<%= search_form_for @q, class: "form-inline my-2 d-flex" do |f| %>
  <%= f.search_field :name_or_location_cont, placeholder: 'Search', class: "form-control me-2" %>
  <%= f.submit 'Search', class: "btn btn-outline-success" %>
  <%= link_to "Back to products", products_path, class: 'btn btn-info btn-sm' %>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :name, "Name", default_order: :asc) %></th>
      <th><%= sort_link(@q, :location, "Location", default_order: :desc) %></th>
      <th><%= sort_link(@q, :price, "Price", default_order: :desc) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
</table>

<h1>
<%= I18n.t(:products) %>
</h1>

<div id="products">
  <% @products.each do |product| %>
    <%= render product %>
    <p>
      <%= link_to "Show this product", product %>
    </p>
  <% end %>
</div>

<%= link_to "New product", new_product_path %>

 

