<h1>search</h1>
      <div id="products">


        <% @product.each do |product| %>
          <article class="card mt-3">
            <div class="card-body">
              <h4><%= product.name %><h4>

              <section class="card-text">
                <p>
                  <% product.pictures.each do |picture| %>
                    <%= link_to image_tag(picture.variant(resize_to_limit: [100, 100])), picture %>
                  <% end %>
                </p>

                <p class="my-2">Price:
                  <%= product.price %>
                

                <p class="my-2">Category:
                  <%= product.category %>
                </p>

                <p class="my-2">Product detail:
                  <%= product.product_detail %>
                </p>

                <p class="my-2">Location:
                  <%= product.location %>
                </p>

                <p class="my-2">Availability:
                  <%= product.availability  %>
                </p>

          


              <%= link_to t('global.button.show'), product_path(product), class: 'btn btn-info btn-sm' %>
            </div>
          <% end %>
      </div>

      <%= link_to "Back to products", products_path, class: 'btn btn-info btn-sm' %>